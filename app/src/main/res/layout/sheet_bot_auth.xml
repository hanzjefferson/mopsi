<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingHorizontal="24dp"
    android:paddingBottom="24dp">

    <View
        android:id="@+id/handle"
        android:visibility="invisible"
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center"
        android:layout_marginVertical="14dp"
        android:background="@drawable/m3_bottom_sheet_drag_handle" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/undraw_chat_bot"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Siapkan akun"
        android:textStyle="bold"
        android:textAppearance="?textAppearanceTitleLarge" />
    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Akun anda belum terintegrasi dengan nomor WhatsApp, mohon untuk melakukan autentikasi ke Bot WhatsApp!"
        android:textColor="?colorPrimary"
        android:textAppearance="?textAppearanceBodyLarge"
        android:layout_marginBottom="16dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kirim pesan ke +14155238886"
        android:layout_marginBottom="8dp"
        app:icon="@drawable/ic_send"
        app:iconGravity="textStart"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log Out"
        app:icon="@drawable/ic_logout"
        style="@style/Widget.Material3.Button.OutlinedButton.Icon"
        app:strokeColor="?colorPrimary"
        app:iconGravity="textStart"/>
</LinearLayout>