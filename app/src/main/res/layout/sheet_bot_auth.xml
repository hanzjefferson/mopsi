<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="24dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/undraw_chat_bot"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Siapkan akun"
        android:textStyle="bold"
        android:textAppearance="?textAppearanceTitleLarge" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Akun anda belum terintegrasi dengan nomor WhatsApp, mohon untuk melakukan autentikasi ke Bot WhatsApp!"
        android:textColor="?colorPrimary"
        android:textAppearance="?textAppearanceBodyLarge"
        android:layout_marginBottom="16dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kirim pesan autentikasi"
        app:icon="@drawable/ic_send"
        app:iconGravity="textStart"/>
</LinearLayout>